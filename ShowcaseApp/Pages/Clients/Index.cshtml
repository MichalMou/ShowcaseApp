@page
@model ShowcaseApp.Pages.Clients.IndexModel
@{
}

<br>
<h2>List of Users</h2>
<a class='btn btn-primary btn-sm' href='/Clients/Create'>New User</a>
<table class="table">
	<thead>
		<tr>
			<th>ID</th>
			<th>Name</th>
			<th>Email</th>
			<th>Phone</th>
			<th>address</th>
			<th>Reg_dat</th>
			<th>Action</th>
		</tr>
	</thead>
	<tbody>
		@foreach(var item in Model.ListClients)
		{
			<tr>
				<th>@item.Id</th>
				<th>@item.Name</th>
				<th>@item.Email</th>
				<th>@item.Phone</th>
				<th>@item.Address</th>
				<th>@item.RegDate</th>
				<td>
					<a class='btn btn-primary btn-sm' href="/Clients/Edit?id=@item.Id">Edit</a>
					<a class='btn btn-primary btn-sm' href="/Clients/Delete?id=@item.Id">Delete</a>
				</td>
			</tr>
		}
	</tbody>
</table>